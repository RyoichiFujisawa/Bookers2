<%= form_for(@book, url: books_path) do |f| %>
 <% if @book.errors.any? %>
  <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
   <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
   </ul>
 <% end %>
 <h2>New book</h2>
 <p>Title</p>
 <%= f.text_field :title %>
 <p>Option</p>
 <%= f.text_area :body %>
 <%= f.submit "Create Book" %>
 <% end %>