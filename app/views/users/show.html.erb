<%= render 'books/list' %>
<div class="container">
	<%= notice %>
	<div class="row">
		<div class="col-xs-3">
			<%= render 'books/list2',user:@user %>
			<%= render 'books/list3',book:@book %>
		</div>
<div class="col-xs-9">
<h2>Books</h2>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Option</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
	  <% @books.each do |book| %>
		<tr>
			<td></td>
			<td><%= link_to book.title, book_path(book.id) %></td>
			<td><%= book.body %></td>
		</tr>
	  <% end %>
	</tbody>
</table>
</div>
</div>




