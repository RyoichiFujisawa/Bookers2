<%= render 'books/list' %>
<div class="container">
	<%= notice %>
	<div class="row">
		<div class="col-xs-3">
			<%= render 'list2',user:@user %>

			<%= render 'list3',book:@book %>
		</div>
		<div class="col-xs-9">
			<h2>Books</h2>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Option</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
	  <% @books.each do |book| %>
		<tr>
			<td><%= link_to user_path(book.user.id) do %>
					<%= attachment_image_tag book.user, :profile_image, size: "40x40" , fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %>
				<% end %>
			</td>

			<td><%= link_to book.title, book_path(book.id) %></td>
			<td><%= book.body %></td>
		</tr>
	  <% end %>
	</tbody>
</table>
		</div>
</div>
</div>